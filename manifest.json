{
  "manifest_version": 3,
  "name": "coldTABs",
  "version": "1.0",
  "description": "Save, organize, and restore your open tabs.",
  "permissions": [
    "tabs", 
    "storage", 
    "sessions"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "icons/favicon-0.png",
        "default-favicon.png"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
  